@page
@model ParkNet.App.Pages.Users.Documents.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Documento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Document.Type)
        </dd>
        <dt class="col-sm-2">
            Número
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Document.Number)
        </dd>
        <dt class="col-sm-2">
            Data de validade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Document.ExpiryDate)
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Document.User.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Document.Id">Editar</a> |
    <a asp-page="./Index">Retroceder</a>
</div>
