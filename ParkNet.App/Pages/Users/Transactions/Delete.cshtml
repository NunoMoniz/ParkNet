@page
@model ParkNet.App.Pages.Users.Transactions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<div>
    <h4>Transação</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movimento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.InsAndOuts)
        </dd>
        <dt class="col-sm-2">
            Usuário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.User.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Transaction.Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-page="./Index">Retroceder</a>
    </form>
</div>
