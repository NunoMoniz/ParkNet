
@page
@model ParkNet.App.Pages.Payments.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Sair</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.Id" />
            <div class="form-group">
                <label asp-for="Ticket.EntryDateTime" class="control-label">Entrou a esta hora:</label>
                <input asp-for="Ticket.EntryDateTime" class="form-control" />
                <span asp-validation-for="Ticket.EntryDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.ExitDateTime" class="control-label">Está a sair agora:</label>
                <input asp-for="Ticket.ExitDateTime" class="form-control" />
                <span asp-validation-for="Ticket.ExitDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.VehicleId" class="control-label">Matrícula</label>
                <select asp-for="Ticket.VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="Ticket.VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.SpaceId" class="control-label">Lugar</label>
                <select asp-for="Ticket.SpaceId" class="form-control" asp-items="ViewBag.SpaceId"></select>
                <span asp-validation-for="Ticket.SpaceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sair" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retroceder</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
