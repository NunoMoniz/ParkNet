@page
@model ParkNet.App.Pages.Payments.Permits.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Confirme se quer apagar</h3>
<div>
    <h4>Permit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Meses
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Permit.Months)
        </dd>
        <dt class="col-sm-2">
            Data de início
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Permit.PermitAccess)
        </dd>
        <dt class="col-sm-2">
           Veículo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Permit.Vehicle.LicensePlate)
        </dd>
        <dt class="col-sm-2">
            Lugar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Permit.Space.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Permit.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
