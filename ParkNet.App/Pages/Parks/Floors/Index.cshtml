@page
@model ParkNet.App.Pages.Parks.Floors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Andares</h1>

<p>
    <a asp-page="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Andar
            </th>
            <th>
                Parque
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Floor) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Park.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
