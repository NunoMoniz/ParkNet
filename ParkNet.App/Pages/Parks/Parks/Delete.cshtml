@page
@model ParkNet.App.Pages.Parks.Parks.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<div>
    <h4>Parque</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Park.Name)
        </dd>
    </dl>
    <label asp-for="Confirmation">
        <span style='color:red'>
            <b>Confirme que deseja apagar este parque escrevendo o nome do mesmo: </b>
        </span>
        <br /><textarea asp-for="Confirmation" rows="1" cols="50"></textarea>
    </label>
    <form method="post">
        <input type="hidden" asp-for="Park.Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-page="./Index">Retroceder</a>
    </form>
</div>
