@page
@model ParkNet.App.Pages.Parks.Spaces.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Lugar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Space.Name)
        </dd>
        <dt class="col-sm-2">
            Tipo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Space.Type)
        </dd>
        <dt class="col-sm-2">
            Piso
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Space.Floor.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Space.Id">Editar</a> |
    <a asp-page="./Index">Retroceder</a>
</div>
