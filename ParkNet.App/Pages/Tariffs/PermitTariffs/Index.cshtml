@page
@model ParkNet.App.Pages.Tariffs.PermitTariffs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Tarifário avenças</h1>

<p>
    <a asp-page="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mensal
            </th>
            <th>
                Trimestral
            </th>
            <th>
                Semestral
            </th>
            <th>
                Anual
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PermitTariff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Monthly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quarterly)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semiannual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yearly)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
