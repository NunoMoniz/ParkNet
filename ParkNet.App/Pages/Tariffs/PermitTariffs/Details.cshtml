@page
@model ParkNet.App.Pages.Tariffs.PermitTariffs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Tarifário avenças</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mensal
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PermitTariff.Monthly)
        </dd>
        <dt class="col-sm-2">
            Trimestral
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PermitTariff.Quarterly)
        </dd>
        <dt class="col-sm-2">
            Semestral
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PermitTariff.Semiannual)
        </dd>
        <dt class="col-sm-2">
            Anual
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PermitTariff.Yearly)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.PermitTariff.Id">Editar</a> |
    <a asp-page="./Index">Retroceder</a>
</div>
